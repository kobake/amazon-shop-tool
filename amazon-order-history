#!/bin/sh
# Usage: amazon-order-history

# -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- #
# User information
# -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- #
# Email
echo -n "Email: "
read mail
# echo "<<$mail>>"

# Password
read -sp "Password: " pass
tty -s && echo
# echo "<<$pass>>"

# -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- #
# Launch PhantomJS
# -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- #
dir=$(cd $(dirname $0);pwd)
phantomjs="$dir/node_modules/phantomjs/bin/phantomjs"
"$phantomjs" "$dir/js/index.js" "$mail" "$pass"

